{
  "name": "Autographa",
  "version": "0.1.0",
  "ProductName": "Autographa Lite",
  "description": "A Bible translation editor for everyone.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "npm install bower && bower install bootstrap-sass-official",
    "pack-win": "electron-packager . Autographa  --overwrite --platform=win32 --arch=x64 --icon=app/assets/images/autographa.ico --out=dist  --win32metadata.CompanyName='OA' --win32metadata.ProductName='Autographa Lite' --prune=true",
    "pack-mac": "electron-packager . Autographa  --overwrite --platform=darwin --arch=x64 --icon=app/assets/images/icon.icns --out=dist --electronVersion=1.8.2 --osx-sign.identity='Autographa Lite' --prune=true",
    "pack-linux": " electron-packager . Autographa  --overwrite --platform=linux --arch=x64 --icon=app/assets/images/autographa-linux.png --out=dist --electron-version=1.8.2 --prune=true",
    "postinstall": "npm rebuild --runtime=electron --target=1.8.2 --disturl=https://atom.io/download/atom-shell --build-from-source",
    "postinstall_windows": "cd node_modules/pouchdb/node_modules/leveldown; node-gyp rebuild --target=1.8.2 --dist-url=https://atom.io/download/atom-shell",
    "installer": "node ./script/installer.js",
    "test:app": "./node_modules/mocha/bin/mocha --timeout 30000 tests/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bridgeconn/autographa-lite.git"
  },
  "keywords": [
    "Desktop",
    "Bible Editor",
    "USFM",
    "USFM Editor"
  ],
  "author": "Bridgeconn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bridgeconn/autographa-lite/issues"
  },
  "homepage": "http://http://www.autographa.com",
  "dependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.11.0",
    "babel-register": "^6.18.0",
    "bower": "^1.8.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "diff-match-patch": "^1.0.0",
    "electron-prebuilt": "^1.4.13",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "2.2.4",
    "material-ui": "^0.17.4",
    "mobx": "^3.1.9",
    "mobx-react": "^4.1.8",
    "mocha": "^5.0.4",
    "pouchdb-adapter-leveldb": "^6.1.0",
    "pouchdb-core": "^6.1.0",
    "pouchdb-quick-search": "^1.2.0",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.5.2",
    "react-addons-shallow-compare": "^15.5.2",
    "react-bootstrap": "^0.30.8",
    "react-bootstrap-grid": "^1.0.0",
    "react-bootstrap-slider": "^1.1.7",
    "react-dom": "^15.4.2",
    "react-intl": "^2.4.0",
    "react-scripts": "0.8.5",
    "react-selectize": "^2.1.0",
    "react-tap-event-plugin": "^2.0.1",
    "rtl-detect": "^1.0.0",
    "sweetalert": "^2.1.0",
    "transform-runtime": "0.0.0",
    "webpack": "^1.14.0"
  },
  "devDependencies": {
    "babel-loader": "^7.0.0",
    "babel-plugin-react-intl": "^2.4.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "electron": "1.8.2",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.7.3",
    "electron-winstaller": "^2.5.1",
    "rimraf": "^2.5.4",
    "spectron": "^3.8.0"
  },
  "peerDependencies": {
    "classnames": "^2.2.0",
    "prop-types": "^15.5.7",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-transition-group": "^1.1.3"
  },
  "build": {
    "appId": "oa.autographa.lite",
    "ProductName": "Autographa Lite"
  }
}
